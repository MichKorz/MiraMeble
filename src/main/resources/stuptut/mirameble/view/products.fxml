<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stuptut.mirameble.controller.ProductsController">
    <children>
        <HBox prefHeight="0.0" prefWidth="478.0">
            <children>
                <TextField fx:id="nameField" prefHeight="25.0" prefWidth="143.0" promptText="Name" />
                <TextField fx:id="manufacturerField" prefHeight="25.0" prefWidth="139.0" promptText="Manufacturer" />
                <TextField fx:id="priceField" prefHeight="25.0" prefWidth="86.0" promptText="Price" />
                <Button fx:id="addProduct" mnemonicParsing="false" onAction="#addProduct" prefHeight="25.0" prefWidth="110.0" text="Add new Product" />
            </children>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="478.0">
            <children>
                <TextField fx:id="IDField" prefHeight="25.0" prefWidth="222.0" promptText="ID" />
                <TextField fx:id="newPriceField" prefHeight="25.0" prefWidth="208.0" promptText="New price" />
                <Button fx:id="changePrice" mnemonicParsing="false" onAction="#changePrice" prefHeight="25.0" prefWidth="137.0" text="Change Price" />
            </children>
        </HBox>
        <HBox prefHeight="0.0" prefWidth="478.0">
            <children>
                <TextField fx:id="deleteIDField" prefHeight="25.0" prefWidth="522.0" promptText="ID" />
                <Button fx:id="deleteProduct" mnemonicParsing="false" onAction="#deleteProduct" prefHeight="25.0" prefWidth="261.0" text="Delete Product" />
            </children>
        </HBox>
        <GridPane fx:id="tableProducts">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
        </GridPane>
        <TextArea fx:id="infoArea" editable="false" prefHeight="0.0" prefWidth="478.0" />
    </children>
</VBox>
